// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Enums ────────────────────────────────────────────────────────────────────

enum UserRole {
  OPERATOR
  VENDOR
  ADMIN
}

enum OrganizationType {
  OPERATOR
  VENDOR
}

enum Urgency {
  LOW
  MEDIUM
  HIGH
  EMERGENCY
}

enum RequestStatus {
  SUBMITTED
  TRIAGING
  NEEDS_CLARIFICATION
  READY_TO_DISPATCH
  TRIAGED
  DISPATCHED
  ACCEPTED
  IN_PROGRESS
  COMPLETED
  VERIFIED
  CANCELLED
}

enum JobStatus {
  OFFERED
  ACCEPTED
  EN_ROUTE
  ON_SITE
  COMPLETED
  DECLINED
}

enum PhotoType {
  BEFORE
  DURING
  AFTER
  INTAKE
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
  CANCELLED
}

// ─── Models ───────────────────────────────────────────────────────────────────

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  passwordHash   String
  name           String?
  role           UserRole  @default(OPERATOR)
  organizationId String?
  vendorId       String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  organization   Organization? @relation(fields: [organizationId], references: [id])
  vendor         Vendor?       @relation(fields: [vendorId], references: [id])
  jobNotes       JobNote[]
  notifications  Notification[]
  chatMessages   ChatMessage[]
  auditLogs      AuditLog[]

  @@index([email])
  @@index([organizationId])
  @@index([vendorId])
}

model Organization {
  id           String           @id @default(cuid())
  name         String
  type         OrganizationType @default(OPERATOR)
  contactEmail String?
  contactPhone String?
  phone        String?
  email        String?
  address      String?
  createdAt    DateTime         @default(now())

  users           User[]
  properties      Property[]
  serviceRequests ServiceRequest[]
  invoices        Invoice[]
  jobs            Job[]

  @@index([type])
}

model Property {
  id             String   @id @default(cuid())
  name           String
  address        String
  description    String?
  organizationId String
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())

  organization    Organization     @relation(fields: [organizationId], references: [id])
  serviceRequests ServiceRequest[]

  @@index([organizationId])
}

model Vendor {
  id              String   @id @default(cuid())
  companyName     String
  contactName     String
  email           String   @unique
  phone           String
  address         String?
  serviceArea     String?
  serviceRadiusKm Int?
  specialties     String[] @default([])
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user        User[]
  skills      VendorSkill[]
  credentials VendorCredential[]
  jobs        Job[]

  @@index([isActive])
}

model VendorSkill {
  id       String @id @default(cuid())
  vendorId String
  category String

  vendor Vendor @relation(fields: [vendorId], references: [id])

  @@unique([vendorId, category])
  @@index([vendorId])
}

model VendorCredential {
  id               String    @id @default(cuid())
  vendorId         String
  type             String
  credentialNumber String
  expiresAt        DateTime?
  verified         Boolean   @default(false)

  vendor Vendor @relation(fields: [vendorId], references: [id])

  @@index([vendorId])
}

model ServiceRequest {
  id               String        @id @default(cuid())
  referenceNumber  String        @unique
  title            String        @default("")
  description      String
  category         String
  propertyId       String
  organizationId   String
  urgency          Urgency       @default(MEDIUM)
  status           RequestStatus @default(SUBMITTED)
  aiTriageSummary  String?
  aiUrgencyScore   Int?
  resolvedAt       DateTime?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  property     Property     @relation(fields: [propertyId], references: [id])
  organization Organization @relation(fields: [organizationId], references: [id])
  job          Job?
  invoice      Invoice?
  photos       Photo[]
  chatMessages ChatMessage[]
  aiClassifications AiClassification[]

  @@index([organizationId])
  @@index([status])
  @@index([category])
  @@index([createdAt])
  @@index([referenceNumber])
}

model Job {
  id                 String    @id @default(cuid())
  serviceRequestId   String    @unique
  vendorId           String
  organizationId     String?
  status             JobStatus @default(OFFERED)
  acceptedAt         DateTime?
  enRouteAt          DateTime?
  arrivedAt          DateTime?
  completedAt        DateTime?
  totalLabourHours   Float?
  totalMaterialsCost Float?
  totalCost          Float?
  vendorNotes        String?
  completionSummary  String?
  createdAt          DateTime  @default(now())

  serviceRequest ServiceRequest @relation(fields: [serviceRequestId], references: [id])
  vendor         Vendor         @relation(fields: [vendorId], references: [id])
  organization   Organization?  @relation(fields: [organizationId], references: [id])
  notes          JobNote[]
  photos         JobPhoto[]
  materials      JobMaterial[]
  proofPacket    ProofPacket?

  @@index([serviceRequestId])
  @@index([vendorId])
  @@index([status])
}

model JobNote {
  id        String   @id @default(cuid())
  jobId     String
  userId    String
  text      String
  createdAt DateTime @default(now())

  job    Job  @relation(fields: [jobId], references: [id])
  author User @relation(fields: [userId], references: [id])

  @@index([jobId])
}

model JobPhoto {
  id        String    @id @default(cuid())
  jobId     String
  type      PhotoType
  url       String
  caption   String?
  takenAt   DateTime  @default(now())
  createdAt DateTime  @default(now())

  job Job @relation(fields: [jobId], references: [id])

  @@index([jobId])
}

model Photo {
  id               String    @id @default(cuid())
  serviceRequestId String
  url              String
  type             String    @default("INTAKE")
  latitude         Float?
  longitude        Float?
  takenAt          DateTime  @default(now())
  createdAt        DateTime  @default(now())

  serviceRequest ServiceRequest @relation(fields: [serviceRequestId], references: [id])

  @@index([serviceRequestId])
}

model JobMaterial {
  id          String   @id @default(cuid())
  jobId       String
  description String
  quantity    Float
  unitCost    Float
  createdAt   DateTime @default(now())

  job Job @relation(fields: [jobId], references: [id])

  @@index([jobId])
}

model Invoice {
  id               String        @id @default(cuid())
  serviceRequestId String        @unique
  organizationId   String
  invoiceNumber    String        @unique
  amount           Float
  status           InvoiceStatus @default(DRAFT)
  createdAt        DateTime      @default(now())

  serviceRequest ServiceRequest @relation(fields: [serviceRequestId], references: [id])
  organization   Organization   @relation(fields: [organizationId], references: [id])

  @@index([serviceRequestId])
  @@index([organizationId])
  @@index([status])
}

model ProofPacket {
  id          String   @id @default(cuid())
  jobId       String   @unique
  generatedAt DateTime @default(now())
  summary     String?
  pdfUrl      String?

  job Job @relation(fields: [jobId], references: [id])

  @@index([jobId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  body      String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([read])
}

model AiClassification {
  id                  String   @id @default(cuid())
  requestId           String
  suggestedCategory   String
  confidence          Float
  reasoning           String
  createdAt           DateTime @default(now())

  request ServiceRequest @relation(fields: [requestId], references: [id])

  @@index([requestId])
}

model ChatMessage {
  id        String   @id @default(cuid())
  requestId String
  userId    String
  content   String
  createdAt DateTime @default(now())

  request ServiceRequest @relation(fields: [requestId], references: [id])
  user    User           @relation(fields: [userId], references: [id])

  @@index([requestId])
}

model AuditLog {
  id         String   @id @default(cuid())
  entityType String
  entityId   String
  action     String
  userId     String?
  metadata   Json     @default("{}")
  createdAt  DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])

  @@index([entityType, entityId])
  @@index([userId])
  @@index([createdAt])
}
